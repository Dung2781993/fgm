
@{
    ViewBag.Title = "Comparison";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="@Url.Content("~/css/map.css")" rel="stylesheet" type="text/css" />

<!--Section: Description-->
<section id="comparison-description" class="section">
    <div class="container-fluid">
        <div class="row regional-cities">
            <div class="span12" id="comparison-background"></div>
            <div class="span3" style="float:left;">
                <p>
                    <h4>Comparison</h4>
                </p>
                <p style="font-size:16px;">
                    Are you confused between two or more cities? Use our comparison feature
                    and compare particular criteria for your favorite cities
                    so that you can make the best choice for.
                    yourself and your family.
                </p>
            </div>
        </div>
    </div>
</section>


<!--Section: Comparison-->
<section id="comparison-description" class="section">
    <div class="container">
        <div class="row regional-cities">
            <div class="span12">
                <h4 style="text-align:left">Please select one critera from the below:</h4>
                <form>
                    <div class="radio">
                        <label class="compare"><input type="radio" name="optradio" checked>Population</label>
                    </div>
                    <div class="radio">
                        <label class="compare"><input type="radio" name="optradio">Language Spoken (Community)</label>
                    </div>
                    <div class="radio">
                        <label class="compare"><input type="radio" name="optradio">Housing Price</label>
                    </div>
                    <div class="radio">
                        <label class="compare"><input type="radio" name="optradio">Job Opportunities</label>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="span12" id="filters">
                <h4 style="text-align:left;">Please select at least two from the below:</h4>
                <ul class="clearfix">
                    <li>
                        <a href="#" data-filter="*" id="Geelong">
                            <!--class="active"-->
                            <h5>Geelong</h5>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-filter="*" id="Bendigo">
                            <h5>Bendigo</h5>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-filter="*" id="Ballarat">
                            <h5>Ballarat</h5>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="span12" id="filters" style="text-align:left;">
                <button type="button" id="CompareSubmit" class="btn btn-outline-info" style="color:#E65100; background-color: transparent; background-image:none; border-color:#E65100; text-align: left; padding: 12px;">
                    Compare
                </button>
            </div>
        </div>
    </div>
</section>